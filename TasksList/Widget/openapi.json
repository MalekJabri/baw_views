{
  "openapi": "3.0.3",
  "info": {
    "title": "TasksList Widget API",
    "description": "OpenAPI specification for the TasksList widget business objects and configuration options used in IBM Business Automation Workflow",
    "version": "1.0.0",
    "contact": {
      "name": "IBM BAW Custom Widgets"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "components": {
    "schemas": {
      "TaskPriority": {
        "type": "string",
        "description": "Priority level of a task",
        "enum": ["low", "medium", "high", "critical"],
        "example": "high"
      },
      "TaskStatus": {
        "type": "string",
        "description": "Status of a task",
        "enum": ["pending", "in-progress", "completed", "cancelled", "on-hold"],
        "example": "in-progress"
      },
      "Task": {
        "type": "object",
        "description": "A single task item",
        "required": ["id", "title", "status"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the task",
            "example": "TASK-001"
          },
          "title": {
            "type": "string",
            "description": "Task title or name",
            "example": "Review document"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the task",
            "example": "Review and approve the quarterly report"
          },
          "status": {
            "$ref": "#/components/schemas/TaskStatus"
          },
          "priority": {
            "$ref": "#/components/schemas/TaskPriority"
          },
          "assignee": {
            "type": "string",
            "description": "Person or group assigned to the task",
            "example": "John Doe"
          },
          "dueDate": {
            "type": "string",
            "format": "date-time",
            "description": "Task due date",
            "example": "2025-12-31T23:59:59Z"
          },
          "createdDate": {
            "type": "string",
            "format": "date-time",
            "description": "Task creation date",
            "example": "2025-12-01T10:00:00Z"
          },
          "completedDate": {
            "type": "string",
            "format": "date-time",
            "description": "Task completion date",
            "example": "2025-12-15T14:30:00Z"
          },
          "tags": {
            "type": "array",
            "description": "Tags or categories for the task",
            "items": {
              "type": "string"
            },
            "example": ["finance", "quarterly", "urgent"]
          },
          "progress": {
            "type": "integer",
            "description": "Task completion percentage (0-100)",
            "minimum": 0,
            "maximum": 100,
            "example": 75
          }
        }
      },
      "TasksListData": {
        "type": "array",
        "description": "Array of task items",
        "items": {
          "$ref": "#/components/schemas/Task"
        },
        "example": [
          {
            "id": "TASK-001",
            "title": "Review quarterly report",
            "description": "Review and approve Q4 financial report",
            "status": "in-progress",
            "priority": "high",
            "assignee": "John Doe",
            "dueDate": "2025-12-31T23:59:59Z",
            "progress": 60
          },
          {
            "id": "TASK-002",
            "title": "Update documentation",
            "description": "Update user manual with new features",
            "status": "pending",
            "priority": "medium",
            "assignee": "Jane Smith",
            "dueDate": "2026-01-15T23:59:59Z",
            "progress": 0
          }
        ]
      },
      "SortOrder": {
        "type": "string",
        "description": "Sort order for tasks",
        "enum": ["asc", "desc"],
        "default": "asc",
        "example": "desc"
      },
      "SortField": {
        "type": "string",
        "description": "Field to sort tasks by",
        "enum": ["title", "status", "priority", "dueDate", "createdDate", "assignee"],
        "default": "dueDate",
        "example": "priority"
      },
      "FilterOptions": {
        "type": "object",
        "description": "Filter options for tasks",
        "properties": {
          "status": {
            "type": "array",
            "description": "Filter by status",
            "items": {
              "$ref": "#/components/schemas/TaskStatus"
            }
          },
          "priority": {
            "type": "array",
            "description": "Filter by priority",
            "items": {
              "$ref": "#/components/schemas/TaskPriority"
            }
          },
          "assignee": {
            "type": "array",
            "description": "Filter by assignee",
            "items": {
              "type": "string"
            }
          },
          "tags": {
            "type": "array",
            "description": "Filter by tags",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "TasksListOptions": {
        "type": "object",
        "description": "Configuration options for the TasksList widget",
        "properties": {
          "showSearch": {
            "type": "boolean",
            "description": "Show search input",
            "default": true,
            "example": true
          },
          "showFilters": {
            "type": "boolean",
            "description": "Show filter controls",
            "default": true,
            "example": true
          },
          "showPagination": {
            "type": "boolean",
            "description": "Enable pagination",
            "default": true,
            "example": true
          },
          "pageSize": {
            "type": "integer",
            "description": "Number of tasks per page",
            "default": 10,
            "minimum": 1,
            "example": 20
          },
          "sortField": {
            "$ref": "#/components/schemas/SortField"
          },
          "sortOrder": {
            "$ref": "#/components/schemas/SortOrder"
          },
          "allowSelection": {
            "type": "boolean",
            "description": "Allow task selection (checkboxes)",
            "default": false,
            "example": true
          },
          "showProgress": {
            "type": "boolean",
            "description": "Show progress bars for tasks",
            "default": true,
            "example": true
          },
          "showAssignee": {
            "type": "boolean",
            "description": "Show assignee column",
            "default": true,
            "example": true
          },
          "showDueDate": {
            "type": "boolean",
            "description": "Show due date column",
            "default": true,
            "example": true
          },
          "showPriority": {
            "type": "boolean",
            "description": "Show priority column",
            "default": true,
            "example": true
          },
          "compactView": {
            "type": "boolean",
            "description": "Use compact layout",
            "default": false,
            "example": false
          }
        }
      },
      "TaskClickEvent": {
        "type": "object",
        "description": "Event data when a task is clicked",
        "properties": {
          "task": {
            "$ref": "#/components/schemas/Task"
          },
          "index": {
            "type": "integer",
            "description": "Index of clicked task in the list"
          }
        }
      },
      "TaskSelectionEvent": {
        "type": "object",
        "description": "Event data when tasks are selected",
        "properties": {
          "selectedTasks": {
            "type": "array",
            "description": "Array of selected tasks",
            "items": {
              "$ref": "#/components/schemas/Task"
            }
          },
          "selectedIds": {
            "type": "array",
            "description": "Array of selected task IDs",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "TasksListWidget": {
        "type": "object",
        "description": "Complete TasksList widget configuration",
        "required": ["data"],
        "properties": {
          "data": {
            "$ref": "#/components/schemas/TasksListData"
          },
          "options": {
            "$ref": "#/components/schemas/TasksListOptions"
          },
          "filters": {
            "$ref": "#/components/schemas/FilterOptions"
          }
        },
        "example": {
          "data": [
            {
              "id": "TASK-001",
              "title": "Review quarterly report",
              "status": "in-progress",
              "priority": "high",
              "assignee": "John Doe",
              "dueDate": "2025-12-31T23:59:59Z",
              "progress": 60
            },
            {
              "id": "TASK-002",
              "title": "Update documentation",
              "status": "pending",
              "priority": "medium",
              "assignee": "Jane Smith",
              "dueDate": "2026-01-15T23:59:59Z",
              "progress": 0
            }
          ],
          "options": {
            "showSearch": true,
            "showFilters": true,
            "pageSize": 10,
            "sortField": "dueDate",
            "sortOrder": "asc"
          }
        }
      },
      "UseCaseExamples": {
        "type": "object",
        "description": "Common use case examples",
        "properties": {
          "projectManagement": {
            "type": "object",
            "description": "Project task management",
            "example": {
              "data": [
                {
                  "id": "PROJ-001",
                  "title": "Design mockups",
                  "status": "completed",
                  "priority": "high",
                  "assignee": "Designer Team",
                  "progress": 100
                },
                {
                  "id": "PROJ-002",
                  "title": "Implement frontend",
                  "status": "in-progress",
                  "priority": "high",
                  "assignee": "Dev Team",
                  "progress": 65
                },
                {
                  "id": "PROJ-003",
                  "title": "Write tests",
                  "status": "pending",
                  "priority": "medium",
                  "assignee": "QA Team",
                  "progress": 0
                }
              ],
              "options": {
                "showProgress": true,
                "sortField": "priority"
              }
            }
          },
          "workflowTasks": {
            "type": "object",
            "description": "Workflow task tracking",
            "example": {
              "data": [
                {
                  "id": "WF-001",
                  "title": "Approve expense report",
                  "status": "pending",
                  "priority": "high",
                  "assignee": "Manager",
                  "dueDate": "2025-12-25T17:00:00Z"
                },
                {
                  "id": "WF-002",
                  "title": "Review contract",
                  "status": "in-progress",
                  "priority": "critical",
                  "assignee": "Legal Team",
                  "dueDate": "2025-12-24T12:00:00Z"
                }
              ],
              "options": {
                "showFilters": true,
                "sortField": "dueDate",
                "sortOrder": "asc"
              }
            }
          }
        }
      }
    }
  }
}